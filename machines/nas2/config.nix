# NAS Configuration - Generated by setup.sh
# Regenerate with: ./scripts/setup.sh nas2
{
  # Identification
  nasName = "nas2";
  hostname = "nixos-nas2";

  # Network
  nasIP = "192.168.0.22";
  gateway = "192.168.0.1";
  nameservers = [ "192.168.0.11" "1.1.1.1" ];

  # Domain (for server integration)
  domain = "josecriane.com";
  subdomain = "in";

  # Administrator user
  adminUser = "sito";
  adminSSHKeys = [
    "ssh-rsa  jose.cribeiro@nomasystems.com"
  ];

  # User/group IDs
  puid = 1000;
  pgid = 1000;

  # Timezone
  timezone = "UTC";

  # Data disks (used by storage-mergerfs.nix and monitoring.nix)
  dataDisks = [ "disk1" "disk2" "disk3" ];

  # Services
  services = {
    samba = true;
    nfs = true;
    cockpit = true;
    filebrowser = true;
    authentikIntegration = true;
  };

  # LDAP (for Samba with Authentik)
  ldap = {
    enable = true;
    server = "192.168.0.5";
    baseDN = "dc=nas,dc=local";
  };
}
